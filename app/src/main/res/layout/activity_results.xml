<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Results">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/tv_congrats_String"
            android:textColor="#363A43"
            android:textSize="@dimen/_30sdp" />

        <ImageView
            android:id="@+id/iv_reward"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/championbelt" />

        <TextView
            android:id="@+id/tv_resultstwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/tv_results2_String"
            android:textColor="#363A43"
            android:textSize="@dimen/_20sdp" />

        <LinearLayout
            android:id="@+id/ll_results"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="15dp"
            android:background="@drawable/nuresultsbgen"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_correctas"
                    android:background="@drawable/rightbordercolor"
                    android:gravity="center"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_17sdp"
                    android:layout_marginTop="@dimen/_28sdp"
                    android:text="70"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/tv_incorrectas"
                    android:background="@drawable/wrongbordercolor"
                    android:gravity="center"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_28sdp"
                    android:layout_marginRight="@dimen/_17sdp"
                    android:text="30"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/tv_sentenceThree_String"
            android:textAlignment="center"
            android:textSize="@dimen/_20sdp"
            android:textStyle="italic"/>

        <!--        <TextView-->
        <!--            android:id="@+id/tv_scoretest"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="TextView"-->
        <!--            android:gravity="center"-->
        <!--            android:textSize="20dp"/>-->

        <Button
            android:id="@+id/btn_results"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginHorizontal="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/backtomenubtn"
            android:paddingVertical="20dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>