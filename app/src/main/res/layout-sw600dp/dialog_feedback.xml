<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/close_view"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="right"
            android:background="@drawable/circle_btn"
            app:tint="@color/crimson"
            app:srcCompat="@drawable/ic_close"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/tv_answer_String"
            android:textColor="#363A43"
            android:textSize="@dimen/_22sdp"
            />

        <TextView
            android:id="@+id/tv_feed"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_300sdp"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border_bg"
            android:backgroundTint="@color/cornsilk"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            android:text="@string/tv_answertxt_String"
            android:textColor="#363A43"
            android:textSize="@dimen/_17sdp"
            android:textStyle="normal"
            tools:text="AQUI VA LA RESPUESTA" />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/floralwhite"
            android:background="@drawable/continuebtn"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>