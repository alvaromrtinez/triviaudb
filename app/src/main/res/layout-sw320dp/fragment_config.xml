<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:background="@drawable/circle_btn"
        app:layout_constraintBottom_toTopOf="@+id/circlebtnBottom"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/titleStart"
        app:layout_constraintTop_toTopOf="@id/circlebtnTop"
        app:srcCompat="@drawable/ic_back"
        app:tint="@color/crimson" />

    <TextView
        android:id="@+id/tv_config"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/roundedtv"
        android:backgroundTint="@color/chocolate"
        android:gravity="center"
        android:inputType="text"
        android:text="@string/tv_config_String"
        android:textColor="@color/cornsilk"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/titleTop"
        app:layout_constraintBottom_toTopOf="@id/titleBottom"
        app:layout_constraintEnd_toStartOf="@id/titleEnd"
        app:layout_constraintStart_toEndOf="@id/titleStart"
        />

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/buttonbordercolor"
        android:gravity="center"
        android:text="@string/tv_language_String"
        android:textColor="@color/chocolate"
        android:textSize="@dimen/_23sdp"
        app:layout_constraintBottom_toTopOf="@id/subtitleoneBottom"
        app:layout_constraintEnd_toEndOf="@id/subtitlesEnd"
        app:layout_constraintStart_toStartOf="@id/subtitlesStart"
        app:layout_constraintTop_toBottomOf="@id/subtitleoneTop" />

    <GridLayout
        android:id="@+id/languageGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:columnCount="2"
        android:rowCount="1"
        app:layout_constraintBottom_toTopOf="@id/gridoneBottom"
        app:layout_constraintEnd_toEndOf="@id/gridsEnd"
        app:layout_constraintStart_toStartOf="@id/gridsStart"
        app:layout_constraintTop_toBottomOf="@id/gridoneTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_spanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/floralwhite"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_spanish"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_80sdp"
                        app:srcCompat="@drawable/mexicoflag" />

                    <TextView
                        android:id="@+id/tv_spanish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/naranjad"
                        android:gravity="center"
                        android:text="@string/tv_spanish_String"
                        android:textColor="@color/cornsilk"
                        android:textSize="@dimen/_19sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/floralwhite"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_english"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_80sdp"
                        app:srcCompat="@drawable/usaflag" />

                    <TextView
                        android:id="@+id/tv_english"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/naranjad"
                        android:gravity="center"
                        android:text="@string/tv_english_String"
                        android:textColor="@color/cornsilk"
                        android:textSize="@dimen/_19sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </GridLayout>

    <TextView
        android:id="@+id/tv_sound"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/buttonbordercolor"
        android:gravity="center"
        android:text="@string/tv_sound_String"
        android:textColor="@color/chocolate"
        android:textSize="@dimen/_23sdp"
        app:layout_constraintStart_toStartOf="@id/subtitlesStart"
        app:layout_constraintEnd_toEndOf="@+id/subtitlesEnd"
        app:layout_constraintTop_toBottomOf="@id/subtitletwoTop"
        app:layout_constraintBottom_toTopOf="@+id/subtitletwoBottom"/>

    <GridLayout
        android:id="@+id/soundGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        app:layout_constraintEnd_toEndOf="@id/gridsEnd"
        app:layout_constraintStart_toStartOf="@id/gridsStart"
        app:layout_constraintTop_toBottomOf="@+id/gridtwoTop"
        app:layout_constraintBottom_toTopOf="@id/gridtwoBottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_25sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/floralwhite"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_music"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/tv_music"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/naranjad"
                        android:gravity="center"
                        android:text="@string/tv_music_String"
                        android:textColor="@color/floralwhite"
                        android:textSize="@dimen/_19sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_sounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/floralwhite"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_sounds"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_5sdp" />
                    <TextView
                        android:id="@+id/tv_fx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/naranjad"
                        android:gravity="center"
                        android:text="@string/tv_fx_String"
                        android:textColor="@color/floralwhite"
                        android:textSize="@dimen/_19sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </GridLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/circlebtnTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/circlebtnBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/titleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/titleBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/subtitleoneTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/subtitleoneBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.29" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gridoneTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gridoneBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/titleStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/titleEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/subtitlesStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/subtitlesEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gridsStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gridsEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/subtitletwoTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/subtitletwoBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gridtwoTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.73" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gridtwoBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>

</androidx.constraintlayout.widget.ConstraintLayout>